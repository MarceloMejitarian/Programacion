 void GenerarV (int vec[] , int n)
 {
	 int i;
	 for (i=0; i<n; i++)
	 {
		 cout << "Introducir numero ";
		 cin >> vec[i] ;
	 }
 }

void MostrarV (int vec[] , int n)
{
	int i;
	cout << " Las componentes del vector son : ";
	for (i=0;i<n;i++)
	{
		cout << vec[i];
	}
}

int SumaElemnetos (int vec [], int n)
{
	int i, S=0;
	for (i=0;i<n;i++)
	{
		S=S+vec[i];
	}
}


int VerificarElementoV (int vec [], int n, int e)
{
	int i;
    bool k= false;
	for(i=0;i<n;i++)
	{
		if (vec[i] == e)
		{
			k = true
		}
	}
   return(k);
}

int VerificarRepeticionV (int vec[], int n, int e)
{
	int i, c=0;
	for (i=0;i<n;i++)
	{
		if(vec[i] == e)
		{
			c++
		}
    }
   return(c)
}


void SumaEntreV (int vec[], int dec[], int rec[], int n)
{
	int i,
	for (i=0;i<n;i++)
	{
		 rec[i]=vec[i]+dec[i];
	}
}

