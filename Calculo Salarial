#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main( )
{
      float salario, AFP, impuesto;
      cout<<"Ingrese el salario:";
      cin >> salario;
      AFP = 0.12;
      impuesto = 0.13;
      if (salario > 2800)
                        {
                         salario final= (salario*AFP)*impuesto;
                         cout<<"Su salario real es:";
                         cout<< salario final;
                         }   
      else
       { 
         cout<<"Su salario real es:";
         cout<< salario;
       }  
      getch( );
}      
    
