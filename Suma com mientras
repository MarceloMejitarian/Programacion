// Suma com mientras.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main ()
{  
	int N, i, S, cont; 
	cout << " Introduzca el valor de N:";
	cin >> N;
	S = 0;
	cont = 2;
	i = 1;
	while ( i <= N )
	{	    
		S = S + cont;
		cont = cont + 2;
		i= i + 1; 
	}
	cout << " La suma es: " << S; 
	_getch ();
	return 0;
}
