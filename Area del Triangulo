#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main ( )
{
        float a,b,c,S,area;
        cin>> a;
        cin>> b;
        cin>> c;
        S = (a + b + c) / 2;
        area = sqrt( S*(S-a)*(S-b)*(S-c));
        cout<< area;
        
    getch( );
}    
  
        
        
        
