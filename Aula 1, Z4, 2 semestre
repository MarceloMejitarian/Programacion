  cout << "Introduzca otro";
  cin >> y;
  while (validarDivi(x,y) == false);   
  P = Divi(x,y);
  cout << "El numero es:" << P; 
  _getch();
	return 0;
}

int Divi(int a , int b)   
{ 
	int i=0;
	while (a > 0)
	{	 
		a=a-b;
        i=i+1; 
	}	
return (i);

}

int Multi(int a, int b)
{
   int S=0, i;
   for (i = 0;i < b;i++)
	   S = S+ a;
return (S);
}
bool validarDivi(int a , int b) 
{
	bool k=false;
	if (a > 0) && (b > 0) && (a%b == 0)) 
	{     
		k = true;
	}
	else   
	{
      if (a <= 0)
	  {  cout <<"Datos invàlidos, nùmeros deben ser mayores a cero ";
	  }
      if (b <= 0)
	  { cout << "Datos invàlidos, nùmeros deben ser mayores a cero ";
	  }	 
	  if (b > 0)
	  { if (a%b != 0)
	    cout << " No se puede realizar la divisiòn exacta";
	  }
	  else
	  {cout << "No se puede divisiòn entre cero";
	  }
	  }

    return(k);
}

